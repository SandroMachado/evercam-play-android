<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    
<CheckedTextView 
    android:id="@+id/spinner_camera_name_text"
    android:singleLine="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="marquee"/>

<ImageView 
    android:id="@+id/spinner_offline_icon"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_toRightOf="@+id/spinner_camera_name_text"
 	android:layout_alignBottom="@+id/spinner_camera_name_text"
    android:src="@drawable/icon_offline_50"/>

</RelativeLayout>